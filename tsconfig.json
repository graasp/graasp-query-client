{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "NodeNext",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],
  "files": ["src/types.ts"], // allows to have the types.d.ts file under /dist
  "exclude": ["dist", "example", "src/**/*.test.ts"]
}
